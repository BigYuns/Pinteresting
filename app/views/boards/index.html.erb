<h2>Index of the Boards </h2>
<p>This is current user's email:
<%=current_user.email%></p>

<%counter=0%>
<br>Name of the Board</br>
<%@boards.each do |board|%>
	<%counter+=1%>
	<br><%=board.name%></br>
	<%=link_to 'Show', user_board_path(current_user, board)%>
	<%=link_to 'Edit', edit_user_board_path(current_user,board)%>
	
	<%=link_to 'Delete', user_board_path(current_user, board), method: :delete, data: {confirm:"Do you really want to delete Board?"} %>
	<%end%>

<p>
The number of the Board:
<%=counter%>
</p>

<p>
<%=link_to 'Create', new_user_board_path(current_user)%>
</p>