
<%= form_for([current_user, @board]) do |f| %>

	<p>
	<%= f.label :name %> <br>
	<%= f.text_area :name%> 
	</p>

	<p>
	<%= f.label :description %> <br>
	<%= f.text_area :description %> 
	</p>

	<p>
	<br><%= f.label "Public"%> </br>
	<%=f.check_box :public, {:checked=>true}%>
	</p>

	<p>
	<%= f.submit %>
	</p>

<% end %>

